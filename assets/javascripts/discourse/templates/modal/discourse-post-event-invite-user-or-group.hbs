<DModalBody
  @title="discourse_post_event.invite_user_or_group.title"
  @class="invite-user-or-group-modal"
>
  <form>
    <EventField>
      <EmailGroupUserChooser
        @tabindex="1"
        @value={{invitedNames}}
        @onChange={{action (mut invitedNames)}}
        @options={{hash
          fullWidthWrap=true
          includeMessageableGroups=true
          filterPlaceholder="composer.users_placeholder"
          excludeCurrentUser=true
        }}
      />
    </EventField>
  </form>
</DModalBody>

<div class="modal-footer">
  <DButton
    @type="button"
    class="btn-primary"
    @label="discourse_post_event.invite_user_or_group.invite"
    @action={{action "invite"}}
  />
</div>